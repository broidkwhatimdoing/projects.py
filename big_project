MAX_LINES = 3

def deposit():
  while True:
    amount = input("What would you like to deposit? $")
    if amount.isdigit():
      amount = int(amount)
      if amount > 0:
        break
      else:
        print("amount must be more than $0")
    else:
      print("please enter a number.")
  
  return amount
deposit()

